@page
@model AppManager.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Passwort zurücksetzen";
}

<h2>Passwort zurücksetzen</h2>

<form method="post">
    <input type="hidden" asp-for="Input.UserId" />
    <input type="hidden" asp-for="Input.Token" />

    <div class="form-group">
        <label asp-for="Input.NewPassword"></label>
        <input asp-for="Input.NewPassword" class="form-control" />
        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.ConfirmPassword"></label>
        <input asp-for="Input.ConfirmPassword" class="form-control" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Passwort festlegen</button>
</form>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-success mt-3">@Model.StatusMessage</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
