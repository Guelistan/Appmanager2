            const appName = button.getAttribute('data-app-name');
            const windowsUsername = button.getAttribute('data-windows-username');

            // Update modal content
            document.getElementById('deleteUserName').textContent = userName;
            document.getElementById('deleteUserUsername').textContent = userUsername;
            document.getElementById('deleteAppName').textContent = appName;
